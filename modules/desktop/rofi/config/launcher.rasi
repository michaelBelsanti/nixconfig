@import "main"
@import "catppuccin"

window {
    height:                         240;
    width:                          100%;
    location:                       south;
    anchor:                         south;
    transparency:                   "real";
    background-color:               @bg-col;
    border:                         5px 0px 0px 0px;
    border-color:                   @border-col;
}

mainbox {
    children:                       [inputbar-box, listview];
    padding:                        0px 0px;
}

listview {
    padding:                        0px;
    dynamic:                        true;
}

inputbar-box {
    children:                       [dummy, inputbar, dummy];
    orientation:                    horizontal;
    expand:                         false;
}

inputbar {
    children:                       [textbox-prompt, entry];
    margin:                         12px 0px 0px 0px;
    background-color:               @bg-col-light;
    border:                         4px;
    border-color:                   @border-col;
    border-radius:                  8px;
}

textbox-prompt {
    font:                           "Font Awesome 5 Free Solid 18";
    text-color:                     @fg-col;
    padding:                        0px 4px 0px 2px;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    str:                            "ï€‚";
    expand:                         false;
}

entry {
    expand:                         false;
    padding:                        4px;
    margin:                         -6px;
    horizontal-align:               0;
    width:                          300;
    background-color:               @bg-col;
    border:                         6px;
    border-color:                   @border-col;
    border-radius:                  8px;
}

element {
    children:                       [dummy, element-box, dummy];
    padding:                        0px;
    orientation:                    horizontal;
    border:                         0;
    border-color:                   transparent;
}

element-box {
    children:                       [element-icon, element-text];
    orientation:                    vertical;
    expand:                         false;
}

element-icon {
    padding:                        8px;
    border:                         4px;
    border-color:                   transparent;
    border-radius:                  8;
    size:                           96;
}

element-text {
    horizontal-align:               0;
    width:                          200px;
}
