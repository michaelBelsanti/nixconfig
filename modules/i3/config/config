#================================= Appearance ================================#
#------------------------------- Colors & font -------------------------------#
set $border     #F28FAD
set $bg         #1E1D2F
set $fg         #D9E0EE
set $indicator  #96CDFB

#                       border    background  text  indicator
client.focused          $border   $border     $fg   $indicator  
client.unfocused        $bg       $bg         $fg   $indicator   
client.focused_inactive $border   $bg         $fg   $indicator   
client.urgent           $border   $bg         $fg   $indicator   

font pango:JetBrainsMono Nerd Font 10

#----------------------------- Window appearance -----------------------------#
# Removes titlebars
for_window [class="^.*"] border pixel 3

hide_edge_borders both
# smart_borders on
gaps inner 6
gaps outer 0
# smart_gaps on
# border_radius 4
# smart_gaps inverse_outer

#================================= Keybinds ==================================#
set $mod Mod4
floating_modifier $mod

bindsym $mod+Return     exec alacritty
bindsym $mod+e          exec nemo
bindsym $mod+b          exec librewolf
bindsym $mod+shift+s    exec shotgun $(hacksaw -f "-i %i -g %g") - | xclip -t 'image/png' -selection clipboard
bindsym $mod+ctrl+shift+s exec   shotgun $(hacksaw -f "-i %i -g %g") - > ~/Pictures/screenshot.png
bindsym $mod+d          exec flatpak run de.shorsh.discord-screenaudio

bindsym $mod+n exec ~/.scripts/togdnd.sh -t
bindsym $mod+shift+q exec xkill
# start and kill compositor 
bindsym $mod+c exec ~/.scripts/picom.sh
bindsym $mod+shift+ctrl+e exec ~/.scripts/eerestart.sh
bindsym $mod+Escape exec betterlockscreen --off 20 -l dimblur
bindsym $mod+v exec ~/.scripts/replay.sh

# popup launcher binds
bindsym $mod+space      exec --no-startup-id ~/.config/rofi/wrapper.sh -r
bindsym $mod+Tab        exec --no-startup-id ~/.config/rofi/wrapper.sh -w
bindsym Mod1+Tab        exec --no-startup-id ~/.config/rofi/wrapper.sh -w
bindsym $mod+o          exec --no-startup-id ~/.config/rofi/wrapper.sh -o

#---------------------------- Workspace navigation ---------------------------#
